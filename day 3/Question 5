n = 5;t = 1
for i in range (n,0,-1):
    for j in range (i,n+1):
        print(j,end=" ")
    for j in range (n-1,i-1,-1):
        print(j,end=" ")
       
    print()
   
for i in range (2,n+1):
     for j in range (i,n+1):
        print(j,end=" ")
     for j in range (n-1,t,-1):
        print(j,end=" ")
     t+=1  
     print()
          
     
