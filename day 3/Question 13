n = 5;t=3;l=3

for i in range (0,2):
    for j in range(n,i,-1):
      print(j,end=" ")
    if(i == 1):
        print(" ",end=" ")
    for j in range(2,n+1): 
      print(j,end=" ")
    print()  
      
for i in range (0,2):  
    for j in range(n,t,-1):
        print(j,end=" ")
    t +=1
    print(" ",end=" ")
    for j in range(n,l,-1):
        print(j,end=" ")
    l +=1
   
    print()    
    
