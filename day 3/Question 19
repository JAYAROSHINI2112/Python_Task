n = 5;m = 1
for i in range (1,n+1):
    for j in range (i):
        print(m,end=" ")
        m = m * 2
    m = 1 
    l = 1;a=[]
    for j in range(i,1,-1):
        a.append(l)
        l = l * 2
    l = l * 4
    print(*a[::-1],end="")
    print()    
    
