n = 5;x = 2;k=0;y=8;l=6
for i in range (0,n):
    for j in range(i+1,x):
        print(j,end=" ")  
    x += 2
    for j in range(k,i,-1):
        print(j,end=" ")  
    k += 2    
    print()
    
for i in range(n,0,-1):
    for j in range(i-1,y):
        print(j,end=" ")
    y -= 2 
    for j in range(l,l-int(l/2),-1):
        print(j,end=" ")
    l -= 2  
    print( )    
    
